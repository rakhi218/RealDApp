  <div>
      <h3 class="text-center">Your Properties</h3>
      <div class="container" style="margin-top: 40px;">
            <ul class="collapsible z-depth-0 guides" style="border: none;">
                {{#each object}}
                <li class="li-item">
                    <div class="collapsible-header yellow lighten-4">Property Name: {{this.Property_name}}</div>
                    <div class="collapsible-header white">Adrress Of the Property: {{this.Property_address}}</div>
                    <div class="collapsible-header white">State Of the Property: {{this.Property_state}}</div>
                    <div class="collapsible-header white">City Of the Property: {{this.Property_city}}</div>
                    <div class="collapsible-header white">Sarve Of the Property: {{this.Property_sarve}}</div>
                    <div class="collapsible-header white">Plot No Of the Property: {{this.Property_plot}}</div>
                    <div class="collapsible-header white">Land Price: {{this.Property_price}}</div>
                    <button class="login" style="margin-top: 10px;" id="download"
                     onclick="download('{{this.Property_proof}}')" >View File</button>
                </li>
                {{else}}
                <h3 class="text-center" style="color:red">You Don't Have Any Properties</h3>
                {{/each}}
                         
            </ul>
       </div>
  </div>

