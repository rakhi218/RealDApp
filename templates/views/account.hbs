<!DOCTYPE html>
<html>
<head>
	{{> links}}
</head>
<body>
	
  {{> navbar}}

  <div class="login-form">
    <form class="form-login" action="/account" method="post" id="get_data">
      <label class="label-field">Full Name</label>
      <input type="text" name="name" id="name" class="input" value={{name}} disabled>
      <label class="label-field">Email Id</label>
      <input type="email" name="email" id="email" class="input" value={{email}} disabled>
      <label class="label-field">Mobile No</label>
      <input type="tel" name="mobile" id="mobile" class="input" value={{mobile}} disabled>
      <label class="label-field">Metamask Address</label>
      <input type="text" name="nop" id="address" class="input" value={{address}} disabled>
      <div class="fl">
        <button type="button" name="edit" id="edit" class="login" style="color: teal;">Edit Profile</button> 
        <button type="button" name="update" id="update" class="login-upload" disabled="disable" style="opacity: 0.3; color:teal">Update</button> 
      </div>
    </form>
  </div>

  {{> footer}}

  <script>
    document.getElementById("edit").onclick = function(){
      document.getElementById("name").disabled = false;
      document.getElementById("mobile").disabled = false;
       document.getElementById("update").disabled = false;
       document.getElementById("update").style.opacity = 1;
        document.getElementById("edit").disabled = true;
        document.getElementById("edit").style.opacity = 0.3;
    }
    document.getElementById("update").onclick = function() {
      var form = document.getElementById("get_data");
      form.submit();
    }
  </script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>